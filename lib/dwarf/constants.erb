module DWARF
  module Constants
  <%- for table in constants -%>
    # <%= table["name"] %>
    # <%= table["header"].join(' | ') %>
    <%- maxwidth = table["body"].map(&:first).sort_by(&:length).last.length -%>
    <%- for row in table["body"] -%>
      <%- if row.first == "Reserved" -%>
    # <%= row.first.ljust(maxwidth - 2) %> = <%= sprintf("0x%02x", row[1]) %><%= row[2] && !row[2].empty? ? " # #{row[2].join(', ')}" : '' %>
      <%- else -%>
    <%= row.first.ljust(maxwidth) %> = <%= sprintf("0x%02x", row[1]) %><%= row[2] && !row[2].empty? ? " # #{row[2].join(', ')}" : '' %>
      <%- end -%>
    <%- end -%>
  <%- end -%>
  end
end
